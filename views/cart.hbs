{{!< default}}
{{# if products}}
    <div class="cart page">
        <ul class="list-group">
            {{# each products}}
                <li class="list-group-item clearfix">
                    <div class="list-item row d-flex justify-content-between">
                        <div class="col-xs-5">
                            <strong>{{this.item.title}}</strong><br/>
                            <em>{{{this.item.description}}}</em>
                        </div>
                        <div class="col-xs-2">
                            <span>Qty: {{this.quantity}}</span>
                        </div>
                        <div class="col-xs-3">
                            <span>${{this.price}}</span>
                        </div>
                        <div class="col-xs-2">
                            <a href="/remove/{{this.item.id}}">
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: ${{totalPrice}}</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-primary">Checkout</a>
    </div>
{{else}}
    Your shopping cart is empty.
{{/if}}
