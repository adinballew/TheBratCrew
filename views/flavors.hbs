{{!< default}}
{{>flavor-nav}}
<div class="row">
    <div class="col-md-12">
        <div id="flavors">
            <div class="flavors">
                {{# each products}}
                    <div class="flavor-box">
                        <div class="flavor-img">
                            <img src={{this.image_path}}>
                        </div>
                        <div class="flavor-name">
                            {{this.name}}
                        </div>
                        <div class="flavor-button">
                            <a data-toggle="modal" data-id="{{this.id}}" data-name="{{this.name}}"
                               data-imagepath="{{this.image_path}}" data-description="{{this.description}}"
                               href="#addFlavor"
                               class="open-AddFlavor btn btn-primary my-2 my-sm-0">
                                Options
                            </a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        <div id="p1-box">
            <p>
                You must be 18 years of age or older to make purchases from this site. Some states even have
                minimum
                age requirement of 21. Please check with your states age requirements and legal smoking ages
                before
                attempting to purchase juice from us. Our juice contains PG, VG, Nicotine & artificial flavoring
                only.
                No extra additives are used.
            </p>
        </div>
    </div>
</div>
{{>options-modal}}