{{!< default}}
<div id="middlePanel">
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-xs-2 col-sm-2 col-md-2 sidebar-offcanvas" id="sidebarLeft">
            <div class="sidebar">
                <ul id="sideNav" class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors">all</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/candy">candy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/desert">desert</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/drink">drink</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/fruit">fruit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/mint">mint</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/special">special</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flavors/tobacco">tobacco</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-10">

            <div id="carouselController" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/slider/a1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/slider/a2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/slider/a3.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselController" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselController" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="top-flavors">
                <div class="banner">
                    <h2>Top Flavors</h2>
                </div>
                <div id="flavors" class="d-flex justify-content-around">
                    {{# each products}}
                        {{# if this.top4}}
                            <div class="flavor-box">
                                <div class="flavor-img">
                                    <img src={{this.imagepath}}>
                                </div>
                                <div class="flavor-name">
                                    {{this.title}}
                                </div>
                                <div class="flavor-button">
                                    <a data-toggle="modal" data-id="{{this.id}}" data-name="{{this.name}}"
                                       data-imagepath="{{this.imagepath}}" href="#addFlavor"
                                       class="open-AddFlavor btn btn-primary my-2 my-sm-0">
                                        Options
                                    </a>
                                </div>
                            </div>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{>options-modal}}