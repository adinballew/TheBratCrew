extends layout

block content
	#wrapper
		.box
			.sideNslide
				.side
					.headingRow Flavors
					a.sidemen.switcher(href='/flavors/') All Flavors
					a.sidemen.switcher(href='/flavors/candy') Candy Flavors
					a.sidemen.switcher(href='/flavors/desert') Desert Flavors
					a.sidemen.switcher(href='/flavors/drink') Drink Flavors
					a.sidemen.switcher(href='/flavors/fruit') Fruit Flavors
					a.sidemen.switcher(href='/flavors/special') Special Flavors
					a.sidemen.switcher(href='/flavors/tobacco') Tobacco Flavors
				.slide
					figure
						img(src='/./assets/img/slider/a1.png')
						img(src='/./assets/img/slider/a2.png')
						img(src='/./assets/img/slider/a3.png')
						img(src='/./assets/img/slider/a1.png')
		.box
			.titleRow Our Top Selling Flavors
		each item in top_flavors
			.flavorbox
				.flavorimage
					img(src=item.image_path, style='width: 100%; height: 100%; position: relative;')
				.flavorname
					| #{item.name}
				.flavorchoosebtn
					a.flavoradd.switcher(href='') Choose Options
		.box
			.adBanner
				figure
					img(src='/./assets/img/slider/banner1.png')
					img(src='/./assets/img/slider/banner2.png')
					img(src='/./assets/img/slider/banner3.png')
					img(src='/./assets/img/slider/banner1.png')
		.box
			.titleRow About BRAT & BRAT Juice
			#about
				.aboutText
